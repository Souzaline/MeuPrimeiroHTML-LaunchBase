{% extends "layout.njk" %} 

{% block head %}

    <title>Conte√∫dos | Meu Primeiro HTML</title>
    
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>

{% endblock %} 

{% block content %}

    <div class="wrapper">
    <h1>Posts Favoritos</h1>
    </div>

    <section class="cards"> 
        {% for item in items %}
        <div class="card" id="{{ item.id }}">
            <div class="card-image">
            <img src="https://blog.rocketseat.com.br/content/images/2020/09/{{ item.id }}.png" alt="Imagem do {{ item.title }}"/>
            </div>

            <div class="card-title">
            <p>{{ item.title }}</p>
            </div>

            <div class="card-info">
            <p class="author">{{ item.author }}</p>
            <p class="card-time"><i class="material-icons">timer</i>{{ item.duration }}</p>
            </div>
        </div>
        {% endfor %}
    </section>

    <div class="modal-overlay">
    <div class="modal">
        <a class="close-modal">
        <i class="material-icons">close</i>
        </a>

        <a class="maximize">
        <i class="material-icons">aspect_ratio</i>
        </a>

        <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
        </div>
    </div>
    </div>

    <script src="/script.js"></script>

{% endblock %}
